# Admin Dashboard Environment Configuration
# ==========================================

# Application Configuration
VITE_APP_NAME="FunTokenNetwork Admin Dashboard"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENV="development"

# API Configuration
VITE_API_URL="http://localhost:3000/api"
VITE_SERVER_URL="http://localhost:3000"
VITE_SOCKET_URL="http://localhost:3000"

# Admin-specific Configuration
VITE_ADMIN_SESSION_TIMEOUT="3600000"
VITE_ADMIN_AUTO_LOGOUT_WARNING="300000"
VITE_ENABLE_AUDIT_LOGGING="true"

# Security Configuration
VITE_ENABLE_SESSION_MONITORING="true"
VITE_FORCE_HTTPS_IN_PRODUCTION="true"
VITE_ENABLE_CSP="true"

# Feature Flags
VITE_ENABLE_REAL_TIME_UPDATES="true"
VITE_ENABLE_ANALYTICS_DASHBOARD="true"
VITE_ENABLE_USER_MANAGEMENT="true"
VITE_ENABLE_CONTENT_MODERATION="true"
VITE_ENABLE_SYSTEM_MONITORING="true"

# Development Tools
VITE_ENABLE_DEV_TOOLS="true"
VITE_ENABLE_PERFORMANCE_MONITORING="true"
VITE_ENABLE_ERROR_BOUNDARY="true"

# UI Configuration
VITE_DEFAULT_THEME="dark"
VITE_ENABLE_THEME_SWITCHING="false"
VITE_SIDEBAR_COLLAPSED_DEFAULT="false"

# Monitoring and Analytics
VITE_ENABLE_SENTRY="false"
VITE_SENTRY_DSN=""
VITE_ENABLE_GOOGLE_ANALYTICS="false"
VITE_GA_TRACKING_ID=""

# Third-party Services
VITE_ENABLE_NOTIFICATIONS="true"
VITE_NOTIFICATION_POSITION="top-right"

# Cache Configuration
VITE_ENABLE_CLIENT_CACHE="true"
VITE_CACHE_DURATION="300000"

# Rate Limiting (Client-side display)
VITE_RATE_LIMIT_DISPLAY="true"
VITE_MAX_REQUESTS_PER_MINUTE="100"

# File Upload Configuration
VITE_MAX_FILE_SIZE="52428800"
VITE_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf"

# Pagination Defaults
VITE_DEFAULT_PAGE_SIZE="20"
VITE_MAX_PAGE_SIZE="100"

# Security Headers (for reference)
# These should be configured on the server/proxy level
# VITE_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'"
# VITE_X_FRAME_OPTIONS="DENY"
# VITE_X_CONTENT_TYPE_OPTIONS="nosniff"